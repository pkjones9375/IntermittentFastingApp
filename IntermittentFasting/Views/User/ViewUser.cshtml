@model User

<h3>@Model.Name</h3>

<table class="table">
    <tr>
        <th>User ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Height In Inches</th>
        <th>Start Weight</th>
        <!--BMI segment goes here-->
        <th>Fast Start Date</th>
        <th>Time to Fast</th>
    </tr>

    <tr>
        <td>@Model.UserID</td>
        <td>@Model.FirstName</td>
        <td>@Model.LastName</td>
        <td>@Model.HeightInInches</td>
        <td>@Model.StartWeight</td>
        <!--BMI segment goes here-->
        <td>@Model.FastStartDate</td>
        <td>@Model.TimeToFast</td>
    </tr>
</table>

<div style="display: block">
    <a href="/User/UpdateUser/@Model.UserID">Update this User</a>
</div>

<!--Here's the code to delete the user from webpage, database. App asks, "Are you sure?"-->
<!--The below code triggers the DeleteUser Controller method in UserController-->
<div style="display: block">
    @using (Html.BeginForm("DeleteUser", "User", "Post"))
    {
        <input type="hidden" asp-for="UserID" value="@Model.UserID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this user" />
    }
</div>