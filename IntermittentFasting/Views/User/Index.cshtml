<!--Here, I'll be creating the Index for Users.-->
<!--This provides the template for how users are displayed on the webpage.-->
@model IEnumerable<User>

<h2>Users</h2>
<table class="table">
    <tr>
        <th>User ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Height in Inches</th>
        <th>Starting Weight</th>
        <th>Fast Start Date</th>
        <th>Time to Fast</th>
        <!--Time to Fast may be a big vague. Might change later.-->
    </tr>

    @foreach(var user in Model)
    {
        <tr>
        <td><a href=/User/ViewUser/@user.UserID>@user.UserID</a></td>
            <!--Each var name below should match with vars in User Model-->
            <td>@user.UserID</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.HeightInInches</td>
            <td>@user.StartWeight</td>
            <td>@user.FastStartDate</td>
            <td>@user.TimeToFast</td>
        </tr>
    }
</table>